<% include ../layout/head.ejs%>

<body>

<div class="container">
    <% include ../layout/nav.ejs %>
    <div class="jumbotron">
        <h1>Driver Rankings</h1>
    </div>
    <ul class="rank">
        <% allRankings.forEach(function (r) { %>
        <li>
            <%= r.name %>
            <br>
            - Total Points Over Lifetime: <strong><%= r.totalPoints %></strong>
            <br>
            - Total First Place Finishes: <strong><%= r.totalPoles %></strong>
            <br>
            - Total Podium Finishes: <strong><%= r.totalTopThree %></strong>
        </li>
        <%})%>
    </ul>
</div>

</body>